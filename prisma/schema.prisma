// سياسات عقوبات التأخير
model HR_DelayPenaltyPolicy {
  id          Int     @id @default(autoincrement())
  name        String // اسم السياسة
  description String? // وصف السياسة

  // نطاق أيام التأخير
  delayDays Int @unique // عدد أيام التأخير (1, 2, 3, 4, 5+)

  // نوع العقوبة
  penaltyType DelayPenaltyType // DEDUCTION أو SUSPENSION

  // قيمة العقوبة
  deductionDays  Float? // عدد أيام الخصم من الراتب
  suspensionDays Int? // عدد أيام الإيقاف (null = غير محدد)

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy BigInt? // من أنشأ السياسة
  updatedBy BigInt? // آخر من عدّلها

  // العقوبات المطبقة بهذه السياسة
  appliedPenalties HR_AppliedPenalty[]

  @@index([delayDays])
  @@index([isActive])
  @@map("HR_DelayPenaltyPolicy")
}

// العقوبات المطبقة على العاملين
model HR_AppliedPenalty {
  id Int @id @default(autoincrement())

  // ربط بالإجازة والعامل
  leaveId    Int
  leave      HR_EmployeeLeave @relation("LeaveAppliedPenalties", fields: [leaveId], references: [id])
  employeeId Int
  employee   Employee         @relation("EmployeeAppliedPenalties", fields: [employeeId], references: [id])

  // تفاصيل التأخير
  delayDays Int // عدد أيام التأخير الفعلي

  // السياسة المطبقة
  policyId Int?
  policy   HR_DelayPenaltyPolicy? @relation(fields: [policyId], references: [id])

  // نوع وقيمة العقوبة المطبقة
  penaltyType    DelayPenaltyType
  deductionDays  Float? // أيام الخصم الفعلية
  suspensionDays Int? // أيام الإيقاف الفعلية

  // حالة العقوبة
  status PenaltyStatus @default(PENDING)

  // الإلغاء والعذر
  isCancelled  Boolean   @default(false)
  cancelReason String? // سبب الإلغاء/العذر
  cancelledBy  BigInt? // من ألغى العقوبة
  cancelledAt  DateTime?

  // التطبيق على الراتب
  isAppliedToPayroll Boolean           @default(false)
  payrollRecordId    Int?
  payrollRecord      HR_PayrollRecord? @relation("PayrollAppliedPenalties", fields: [payrollRecordId], references: [id])
  appliedToPayrollAt DateTime?

  // التسجيل
  createdBy BigInt
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notes String? // ملاحظات إضافية

  @@index([leaveId])
  @@index([employeeId])
  @@index([status])
  @@index([isCancelled])
  @@index([isAppliedToPayroll])
  @@map("HR_AppliedPenalty")
}

// سجل تعديلات دورات العمل والإجازات
model HR_CycleChangeLog {
  id Int @id @default(autoincrement())

  // نوع التعديل
  entityType String // "Position" أو "Employee"
  entityId   Int // ID الوظيفة أو الموظف

  // القيم القديمة
  oldWorkDays  Int?
  oldLeaveDays Int?

  // القيم الجديدة
  newWorkDays  Int?
  newLeaveDays Int?

  // معلومات التعديل
  changedBy BigInt
  changedAt DateTime @default(now())
  reason    String? // سبب التعديل (اختياري)

  @@index([entityType, entityId])
  @@index([changedBy])
  @@index([changedAt])
  @@map("HR_CycleChangeLog")
}

